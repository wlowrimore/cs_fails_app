<div class="container bg-light mt-4 p-5">
  <h2><%= @article.title %></h2>
  <p><%= @article.body %></p>
  <ul class="p-0 mb-0 mt-5">
    <li class="list-unstyled mt-3"><%= link_to "Edit", edit_article_path(@article) %></li>
    <li class="list-unstyled mt-3"><%= link_to "Destroy", article_path(@article), data: {
                                                turbo_method: :delete,
                                                turbo_confirm: "Are you sure?"
                                                } %></li>
  </ul>

  <h2>Comments</h2>
  <% @article.comments.each do |comment| %>
    <p>
      <strong>Commenter:</strong>
      <%= comment.commenter %>
    </p>

    <p>
      <strong>Comment:</strong>
      <%= comment.body %>
    </p>
  <% end %>

  <h2>Add a comment:</h2>
  <%= form_with model: [ @article, @article.comments.build ] do
  |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>

  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>

  <p>
    <%= form.submit %>
  </p>
  <% end %>
</div>